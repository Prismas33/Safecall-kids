{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Debug APK",
			"type": "shell",
			"command": "./gradlew",
			"args": ["assembleDebug"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": ["$gradle"]
		},
		{
			"label": "Install Debug APK",
			"type": "shell",
			"command": "./gradlew",
			"args": ["installDebug"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"dependsOn": "Build Debug APK",
			"problemMatcher": ["$gradle"]
		},
		{
			"label": "Run App",
			"type": "shell",
			"command": "adb",
			"args": [
				"shell",
				"am",
				"start",
				"-n",
				"com.safecallkids.app/.MainActivity"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"dependsOn": "Install Debug APK",
			"problemMatcher": []
		},
		{
			"label": "Clean Build",
			"type": "shell",
			"command": "./gradlew",
			"args": ["clean"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": ["$gradle"]
		},
		{
			"label": "List Devices",
			"type": "shell",
			"command": "adb",
			"args": ["devices"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}