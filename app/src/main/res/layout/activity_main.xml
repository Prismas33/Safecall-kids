<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:paddingTop="24dp"
    android:fitsSystemWindows="true"
    android:background="@color/background_color">    <!-- Spacer for Status Bar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- App Header with Logo and Title --><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logo_safecall_transparent"
            android:layout_marginEnd="12dp"
            android:contentDescription="SafecallKids Logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SafecallKids"
            android:textSize="24sp"
            android:textColor="@color/header_text"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_shield_heart"
            android:contentDescription="Proteção Ativa" />

    </LinearLayout>

    <!-- Language Switch Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_label"
            android:textSize="14sp"
            android:textColor="@color/secondary_text_color"
            android:layout_marginEnd="12dp"
            android:gravity="center_vertical" />

        <ImageButton
            android:id="@+id/btn_lang_pt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_flag_pt"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Português"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_lang_en"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_flag_en"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="English"
            android:scaleType="fitCenter" />

    </LinearLayout>    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/protection_description"
        android:textSize="14sp"
        android:textColor="@color/secondary_text_color"
        android:gravity="center"
        android:layout_marginBottom="24dp" /><!-- Status Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="❌ Proteção Desativada"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2" />

    </LinearLayout>    <!-- Statistics Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">            <TextView
                android:id="@+id/contactsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contacts_loaded"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">            <TextView
                android:id="@+id/blockedCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calls_blocked"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Main Action Button -->    <Button
        android:id="@+id/enableButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/grant_permissions"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_primary"
        android:layout_marginBottom="16dp" />    <!-- Verify Permissions Button -->
    <Button
        android:id="@+id/verifyButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/verify_permissions"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#2196F3"
        android:layout_marginBottom="16dp" /><!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_text"
        android:textSize="12sp"
        android:textColor="@color/secondary_text_color"
        android:lineSpacingMultiplier="1.4"
        android:layout_marginTop="16dp" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />    <!-- Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/footer_text"
        android:textSize="10sp"
        android:textColor="@color/secondary_text_color"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>
