<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Estado pressionado - Laranja mais escuro -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_mom_call_pressed" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="@color/button_mom_call_pressed" />
        </shape>
    </item>
    
    <!-- Estado normal - Laranja suave -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_mom_call" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="@color/button_mom_call" />
        </shape>
    </item>
    
</selector>
